    "repository": {
        "type": "git",
        "url": "git+https://github.com/cencori/cencori.git"
    },
    "homepage": "https://scan.cencori.com",
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "start": "node dist/cli.js",
        "test": "vitest"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.0.0",
        "glob": "^10.3.10",
        "ora": "^8.0.1"
